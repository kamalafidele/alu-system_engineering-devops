#!/usr/bin/env bash
# This script installs and configures nginx web server on Ubuntu

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Stop nginx if it's running to make configuration changes
service nginx stop

# Create the custom index.html with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Set proper permissions
chown www-data:www-data /var/www/html/index.html
chmod 644 /var/www/html/index.html

# Ensure default nginx configuration is correct
cat > /etc/nginx/sites-available/default << 'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# Remove any potential conflicting configurations
rm -f /etc/nginx/sites-enabled/default
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Test nginx configuration
nginx -t

# Start nginx service
service nginx start

# Enable nginx to start on boot
if command -v update-rc.d > /dev/null; then
    update-rc.d nginx enable
elif command -v chkconfig > /dev/null; then
    chkconfig nginx on
fi

# Force reload nginx configuration
service nginx reload

# Ensure nginx is running
service nginx status

