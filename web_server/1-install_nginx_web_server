#!/usr/bin/env bash
# This script installs nginx, ensures it's running on port 80, and serves a page with "Holberton School"

# Update package list
apt-get update -y

# Install nginx if not already installed
apt-get install -y nginx

# Overwrite the default index.html with required content
echo "Holberton School" > /var/www/html/index.html

# Restart nginx without using systemctl
service nginx restart

