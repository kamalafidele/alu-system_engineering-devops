#!/usr/bin/env bash
# This script installs and configures nginx web server on Ubuntu

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Create custom index.html with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure nginx is configured to listen on port 80 (default configuration should work)
# But let's make sure by checking the default site configuration
if ! grep -q "listen 80" /etc/nginx/sites-available/default; then
    # If port 80 is not configured, add it
    sed -i 's/listen \[::\]:80 default_server;/listen 80 default_server;\n\tlisten [::]:80 default_server;/' /etc/nginx/sites-available/default
fi

# Start nginx service (using service command instead of systemctl)
service nginx start

# Enable nginx to start on boot
update-rc.d nginx enable

# Restart nginx to ensure configuration is loaded (using service command)
service nginx restart

